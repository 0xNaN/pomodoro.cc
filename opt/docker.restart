#!/bin/bash

set -e

SCRIPT_DIR=$(dirname `readlink -f $0`)
PROJECT_DIR=$(dirname $SCRIPT_DIR)
if [ "$PROJECT_DIR" = "/" ]; then
  PROJECT_DIR="/pomodoro.cc"
fi
ENV="PRO"
if [ "$1" = "DEV" ];then
  ENV="DEV"
fi

$PROJECT_DIR/opt/docker.build
$PROJECT_DIR/opt/docker.rm
$PROJECT_DIR/opt/docker.run $ENV
