#!/bin/bash

set -e

SCRIPT_DIR=$(dirname `readlink -f $0`)
PROJECT_DIR=$(dirname $SCRIPT_DIR)

MIX_ENV="$1"

if [[ -z "$MIX_ENV" ]]; then
  MIX_ENV="prod"
fi

docker run --rm \
  --env MIX_ENV="$MIX_ENV" \
  --link pomodoro-api_v2-db:pomodoro-api_v2-db \
  christianfei/pomodoro-api_v2 \
  sh -c "mix ecto.create; mix ecto.migrate"
