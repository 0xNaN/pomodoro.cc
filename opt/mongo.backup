#!/bin/bash

usage(){
  echo "Usage: mongo.backup BACKUP_DIR"
}

BACKUP_DIR=$1

if [ -z "$BACKUP_DIR" ]; then
  usage
  exit 1
fi

MONGO_CONTAINER="pomodoro-api-db"

docker run --rm -it \
  --link $MONGO_CONTAINER:mongo_alias \
  -v $BACKUP_DIR:/backup \
  mongo \
  sh -c "mongodump --host mongo_alias --out /backup/"
