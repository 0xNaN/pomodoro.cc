.todo-list-container
  padding .5rem
  width 100%

.todo-list
  width 100%
  margin 0
  padding 0
  list-style none

  li
    position relative
    font-size 24px
    border-bottom 1px solid #ededed
    &:last-child
      border-bottom none

.todo-input
  padding: 16px 16px 16px 60px;
  border: none;
  width: 100%;
  font-size: 24px;
  font-family: inherit;
  font-weight: inherit;
  line-height: 1.4em;
  outline: none;
  font-smoothing: antialiased;
  box-sizing: border-box;


